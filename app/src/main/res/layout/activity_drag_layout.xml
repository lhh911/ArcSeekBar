<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.arcseekbar.DragLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="60dp"
        android:paddingRight="30dp"
        android:paddingBottom="0dp">

        <com.example.arcseekbar.weight.productinterface.ProductItemView2
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/productview2"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#4400ccaa"
                android:padding="10dp"
                android:text="Hello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#4400ccaa"
                android:padding="10dp"
                android:text="哈哈哈哈哈" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#4400ccaa"
            android:padding="10dp"
            android:text="wakaka" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#4400ccaa"
            android:padding="10dp"
            android:text="Hi, hi, you you !" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/applogo" />

    </com.example.arcseekbar.DragLayout>
</LinearLayout>
