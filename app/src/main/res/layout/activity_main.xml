<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dragview"
            android:onClick="dragview"/>

        <com.example.arcseekbar.weight.ArcSeekBar
            android:id="@+id/arc_seek_bar"
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:arc_colors="@array/arc_colors_default"
            app:arc_max="100"
            app:arc_open_angle="180"
            app:arc_progress="0"
            app:arc_rotate_angle="90"
            app:arc_thumb_color="#fff"
            app:arc_thumb_mode="STROKE"
            app:arc_thumb_radius="16dp"
            app:arc_thumb_width="3dp"
            app:arc_width="40dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone" />

        <com.example.arcseekbar.weight.productinterface.ProductItemView
            android:id="@+id/productview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00ff00" />

        <com.example.arcseekbar.weight.productinterface.ProductItemView2
            android:id="@+id/productview2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="#00ff00" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </LinearLayout>


</ScrollView>